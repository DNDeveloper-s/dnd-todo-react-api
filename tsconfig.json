{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./",
    "moduleResolution": "node",
    "strict": false,         
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots" : ["./node_modules/@types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include": [
    "./**/*"
  ],
  "exclude" : [
    "./**/*.spec.ts",
    "node_modules",
    "build"
  ]
}
